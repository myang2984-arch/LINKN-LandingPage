rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to write to beta_signups (for form submissions)
    match /beta_signups/{document} {
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Allow anyone to write to testflight_signups (for TestFlight invitations)
    match /testflight_signups/{document} {
      allow create: if true;
      allow read, update: if false;
      allow delete: if false;
    }

    // Allow anyone to read and update feature likes
    match /featureLikes/{document} {
      allow read: if true;
      allow create, update: if true;
      allow delete: if false;
    }
  }
}